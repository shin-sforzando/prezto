cask "google-chrome"
cask "imageoptim"
cask "iterm2"
cask "launchbar"
cask "macwinzipper"
cask "popclip"
cask "pycharm"
cask "rectangle"
cask "station"
cask "suspicious-package"
cask "transmit"
cask "visual-studio-code"
cask "vlc"
