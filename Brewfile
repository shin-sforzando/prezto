## Add Homebrew tap
tap "homebrew/bundle"
tap "homebrew/cask"
tap "homebrew/cask-fonts"
tap "homebrew/core"
tap "sanemat/font"

## Install Packages
# Robust and modular log colorizer
brew "ccze"

# Get a file from an HTTP, HTTPS or FTP server
brew "curl", args: ["with-openssl"]

# Modern replacement for 'ls'
brew "exa"

# Play, record, convert, and stream audio and video
brew "ffmpeg", args: ["HEAD", "with-fontconfig", "with-freetype"]

# SSL/TLS cryptography library
brew "openssl"

# Infamous electronic fortune-cookie generator
brew "fortune", args: ["without-offensive"]

# Remote repository management made easy
brew "ghq"

# Distributed revision control system
brew "git", args: ["with-curl", "with-gettext", "with-openssl"]

# Git extension for versioning large files
brew "git-lfs"

# Convert source code to formatted text with syntax highlighting
brew "highlight"

# Lightweight and flexible command-line JSON processor
brew "jq"

# Swiss Army Knife for macOS
brew "m-cli"

# Mac App Store command-line interface
brew "mas"

# Remote terminal application
brew "mosh"

# Ambitious Vim-fork focused on extensibility and agility
brew "neovim"

# Network Kanji code conversion Filter (NKF)
brew "nkf"

# Simplistic interactive filtering tool
brew "peco"

# Search tool like grep and The Silver Searcher
brew "ripgrep"

# Send macOS User Notifications from the command-line
brew "terminal-notifier"

# Programatically correct mistyped console commands
brew "thefuck"

# Text interface for Git repositories
brew "tig"

# Command-line translator using Google Translate and more
brew "translate-shell"

# Source code beautifier
brew "uncrustify"

# Internet file retriever
brew "wget"

# Download YouTube videos from the command-line
brew "youtube-dl"

# UNIX shell (command interpreter)
brew "zsh", args: ["without-etcdir"]

# Font for programming
brew "sanemat/font/ricty", args: ["with-powerline"]

